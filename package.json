{
  "name": "double-mouse-downloader",
  "version": "0.0.1",
  "description": "鼠鼠下载器——跨平台哔哩哔哩视频下载工具。",
  "main": "./dev-build/app/main.js",
  "private": "true",
  "scripts": {
    "start": "npm-run-all --parallel start:app start:app:watch start:view",
    "start:app": "cross-env NODE_ENV=development nodemon -w ./dev-build/app/ -e js -x electron .",
    "start:app:watch": "tsc -p ./src/app/tsconfig.json --sourceMap --watch",
    "start:view": "vite -c ./src/views/vite.config.js",
    "prepare-debug": "npm-run-all --parallel start:app:watch start:view",
    "clear": "rimraf ./dev-build && rimraf ./dist",
    "build:app": "tsc -p ./src/app/tsconfig.json",
    "build:view": "vite build -c ./src/views/vite.config.js",
    "build": "npm-run-all clear build:app build:view",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "lint": "prettier --write ./src/**/* && eslint --fix ./src/**/*.{ts,tsx,js}",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "MoyuScript <i@moyu.moe>",
  "license": "GPL-3.0-or-later",
  "lint-staged": {
    "*.{ts,tsx,js,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "cross-env": "^7.0.3",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "lint-staged": "^13.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.10"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "ahooks": "^3.4.1",
    "antd": "^4.21.0",
    "electron-devtools-installer": "^3.2.0",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.2",
    "react-transition-group": "^4.4.2"
  }
}
