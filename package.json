{
  "name": "double-mouse-downloader",
  "version": "0.0.1",
  "description": "鼠鼠下载器——跨平台哔哩哔哩视频下载工具。",
  "main": "./dev-build/app/main.js",
  "scripts": {
    "start": "npm run build:dev && electron .",
    "dev": "nodemon -w ./src -e ts,tsx,js,html -x npm start",
    "clear": "rimraf ./dev-build && rimraf ./dist",
    "build:app": "tsc -p ./src/app/tsconfig.json",
    "build:app:dev": "tsc -p ./src/app/tsconfig.json",
    "build:views": "vite build -c ./src/views/vite.config.js",
    "build:views:dev": "vite build -c ./src/views/vite.config.js --mode development",
    "build": "npm-run-all clear build:app build:views",
    "build:dev": "npm-run-all clear build:app:dev build:views:dev",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "lint": "prettier --write ./src/**/* && eslint --fix ./src/**/*.{ts,tsx,js}",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "MoyuScript <i@moyu.moe>",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-react": "^1.3.2",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.10"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
}
